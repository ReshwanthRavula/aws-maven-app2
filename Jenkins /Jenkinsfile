pipeline {
    agent {
       node {
    		label 'aws-vm'
    		}
        }
     options {
                timestamps()
                buildDiscarder(logRotator(numToKeepStr: '2', artifactNumToKeepStr: '2'))
                timeout(time: 120, unit: 'MINUTES')
                disableConcurrentBuilds()
            }

    parameters {
            string(name: 'appBranch', defaultValue: 'main', description: "Application Branch name of the Repo")
            string(name: 'gitURL', defaultValue: 'https://github.com/ReshwanthRavula/aws-maven-app2.git', description: "Pass the Maven Repo Source Code GIT URL")
            }            

    stages {
        stage('checkout') {
            steps {
                git branch: appBranch, url: gitURL
            }
        }
        stage('Maven Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build . -f dockerfile_testapp -t reshwanth35/mavendemoapp:Jan11'

            }
        }  

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerloginID', passwordVariable: 'dockerPWD', usernameVariable: 'dockerID')])
                {
                    sh 'docker login -u ${dockerID} -p ${dockerPWD}'
                }

            }
        }              

        stage('Docker Push') {
            steps {
                sh 'docker push reshwanth35/mavendemoapp:latest'

            }
        } 
        stage('k8s-Manifest Checkout') {
            steps {

                git 'https://github.com/ReshwanthRavula/aws-k8s-cicd.git'

            }
        }

        stage ('Kubernetes AutoDeployment') {
  

                steps {

                    dir('manifests')
                     {

                    sh 'ls -l'
                    // kubectl apply -f <fileName>.yml
                    sh 'kubectl --server=https://9054A4E01C572D15F0F99050179F5A17.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6IkZrVXVSUHVlLXlxcTBfejRiLXdQVjhNb0xwYWZRQmRMR2tpNzU1QXJ6REEifQ..Ci8RQyVGcEQC_Zg0XoYIAHbESageT-xrpXzRA8ijHhiZvw56cRqJz3PtcLt66LQQyQQKrm31xd3R5fhz3pO7h513IHs9KDZaQLk49lH32Sndq635SI0Q-fc0ourWYOwL1fUOQ3fVvxSS40TbdcA2TIpilFzDPqTHHQOtwq4ywtI-Yk62kT9oBHUOGHRRoKJ4WaN6Z0SlZKY2TIDfVjZlzEQ92lrfN1K5dIRjlZKMsnTE2gO-erZhzE3quknIiZio1du_ID88Ew12JxsmtbhLDofgWy-hf6zkE5GEIYWoOFm38_OwDJAs95766n9H0Jg5e9RlCyAIC5huUMhNyKhXaw" apply -f deployment.yaml'

                    sh 'kubectl --server=https://9054A4E01C572D15F0F99050179F5A17.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6IkZrVXVSUHVlLXlxcTBfejRiLXdQVjhNb0xwYWZRQmRMR2tpNzU1QXJ6REEifQ..Ci8RQyVGcEQC_Zg0XoYIAHbESageT-xrpXzRA8ijHhiZvw56cRqJz3PtcLt66LQQyQQKrm31xd3R5fhz3pO7h513IHs9KDZaQLk49lH32Sndq635SI0Q-fc0ourWYOwL1fUOQ3fVvxSS40TbdcA2TIpilFzDPqTHHQOtwq4ywtI-Yk62kT9oBHUOGHRRoKJ4WaN6Z0SlZKY2TIDfVjZlzEQ92lrfN1K5dIRjlZKMsnTE2gO-erZhzE3quknIiZio1du_ID88Ew12JxsmtbhLDofgWy-hf6zkE5GEIYWoOFm38_OwDJAs95766n9H0Jg5e9RlCyAIC5huUMhNyKhXaw" apply -f service.yaml'

                    sh 'kubectl --server=https://9054A4E01C572D15F0F99050179F5A17.gr7.us-east-1.eks.amazonaws.com --insecure-skip-tls-verify --token="eyJhbGciOiJSUzI1NiIsImtpZCI6IkZrVXVSUHVlLXlxcTBfejRiLXdQVjhNb0xwYWZRQmRMR2tpNzU1QXJ6REEifQ..Ci8RQyVGcEQC_Zg0XoYIAHbESageT-xrpXzRA8ijHhiZvw56cRqJz3PtcLt66LQQyQQKrm31xd3R5fhz3pO7h513IHs9KDZaQLk49lH32Sndq635SI0Q-fc0ourWYOwL1fUOQ3fVvxSS40TbdcA2TIpilFzDPqTHHQOtwq4ywtI-Yk62kT9oBHUOGHRRoKJ4WaN6Z0SlZKY2TIDfVjZlzEQ92lrfN1K5dIRjlZKMsnTE2gO-erZhzE3quknIiZio1du_ID88Ew12JxsmtbhLDofgWy-hf6zkE5GEIYWoOFm38_OwDJAs95766n9H0Jg5e9RlCyAIC5huUMhNyKhXaw" rollout restart deployment/java-app-deployment'

                    echo "kubernetes deployment is done"

                    sh 'kubectl get deployments'
                    sh 'sleep 100 ; kubectl get services'
                    
                    }

                    }
                }
        stage('Archive and clean workspace') {
                steps {
                    
                    //archive 'target/demo*.jar'
                    archiveArtifacts artifacts: 'target/*.jar', followSymlinks: false
                    cleanWs()
                }

            }              

    }
}
